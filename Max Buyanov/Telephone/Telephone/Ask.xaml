<Window x:Class="Telephone.Ask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telephone"
        mc:Ignorable="d"
        Title="Ask" Height="300" Width="400">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="43,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Height="25"><Run Text="Введите ID  контакта"/><LineBreak/><Run/></TextBlock>
        <TextBox x:Name="askBox" HorizontalAlignment="Left" Height="23" Margin="230,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="90"/>
        <Button Click="Accept_Click" Content="OK" HorizontalAlignment="Left" Margin="80,190,0,0" VerticalAlignment="Top" Width="75" IsDefault="True"/>
        <Button Content="CANCEL" Margin="0,190,80,0" VerticalAlignment="Top" Width="75" HorizontalAlignment="Right" IsCancel="True"/>

    </Grid>
</Window>
